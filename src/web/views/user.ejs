<!DOCTYPE html>
<html lang="en">
  <%- include('includes/head') %>
<head>
  <link rel="stylesheet" href="/css/user.css" />
</head>
<body>
  <div class="background">
    <p class="name"><%- user.display %></p>
    <a href="/dashboard"><button class="back">Back</button></a>

    <h3 class="title" id="activity">Logs</h3>
    <div class="activity">
      <div class="inside">
        <textarea readonly><%- logs.join('\n') %></textarea>
      </div>
    </div>
    <h3 class="title" id="queue">Queue</h3>
    <div class="queue">
      <div class="inside">
        <form method="post" action="/dashboard/<%- user.login %>">
          <table style="width: 100%;">
            <tbody>
              <% for (const id in queue.songs ) { %>
                <%- include("includes/table", { song: queue.songs, id }) %>
              <% } %>
            </tbody>
          </table>
        </form>
      </div>
    </div>
    <h3 class="title" id="settings">Settings</h3>
    <div class="settings">
      <div class="inside">
        <form method="post" action="/settings/<%- user.login %>" style="width: 100%; height: 100%;">
          <input type="hidden" value="<%- user.fuck %>" name="pswd">
          <table style="width: 100%;">
            <tbody>
              <tr>
                <td>Auto Accept</td>
                <td>
                  <% if(user.settings.autoAccept) { %>
                    <div class="checkbox-wrapper">
                      <input type="checkbox" id="checkbox" name="accept" checked>
                    </div>
                  <% } else { %>
                    <div class="checkbox-wrapper">
                      <input type="checkbox" id="checkbox" name="accept">
                    </div>
                  <% } %>
                </td>
              </tr>
            </tbody>
          </table>
          <button type="submit" class="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>